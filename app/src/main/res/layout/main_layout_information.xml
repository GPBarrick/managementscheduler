<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_information_header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/asset_rounded_corners_1" />

    <ImageView
        android:id="@+id/list_information_main"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/list_information_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/asset_rounded_corners_1" />

    <ListView
        android:id="@+id/list_information_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_information_main"
        android:layout_alignTop="@+id/list_information_main"
        android:layout_alignEnd="@+id/list_information_main"
        android:layout_alignBottom="@+id/list_information_main"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>