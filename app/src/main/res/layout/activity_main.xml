<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_layout_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_layout_top_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="700dp"
        android:background="@drawable/main_layout_top_banner"/>

    <ImageView
        android:id="@+id/main_layout_information_header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/main_layout_top_banner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-670dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/asset_rounded_corners_2" />

    <ImageView
        android:id="@+id/main_layout_information_main"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/main_layout_information_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/asset_rounded_corners_2" />

    <ListView
        android:id="@+id/main_layout_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_layout_information_main"
        android:layout_alignTop="@+id/main_layout_information_main"
        android:layout_alignEnd="@+id/main_layout_information_main"
        android:layout_alignBottom="@+id/main_layout_information_main"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/main_layout_addition_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_layout_information_main"
        android:layout_alignStart="@+id/main_layout_information_main"
        android:layout_alignEnd="@+id/main_layout_information_main"
        android:layout_marginTop="-62dp"
        android:text="@string/addition_button_text" />

    <TextView
        android:id="@+id/main_layout_information_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_layout_information_header"
        android:layout_alignTop="@+id/main_layout_information_header"
        android:layout_alignEnd="@+id/main_layout_information_header"
        android:layout_alignBottom="@+id/main_layout_information_header"
        android:gravity="center"
        android:text="@string/today_play"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>